import pyautogui
import time
import cv2
import numpy as np
import PIL.Image, PIL.ImageTk
import tkinter as tk
from tkinter import *
#by Bru_man3

def zoom(image, zoom_factor=2):
    return cv2.resize(image, None, fx=zoom_factor, fy=zoom_factor)

image = pyautogui.screenshot(region=(840,400,140, 140))
image = cv2.cvtColor(np.array(image),
                     cv2.COLOR_RGB2BGR)
cv2.imwrite("image1.png", image)
# [rows, columns]
#crop = image[85:90, 85:90]
window = tk.Tk()
r = cv2.imread('image1.png')
height, width, no_channels = r.shape
canvas = tk.Canvas(window, width = width, height = height)
canvas.pack()
photo = PIL.ImageTk.PhotoImage(image = PIL.Image.fromarray(r))
# Add a PhotoImage to the Canvas
canvas.create_image(0, 0, image=photo, anchor=tk.NW)
window.mainloop()

